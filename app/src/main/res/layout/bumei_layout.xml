<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">
    <include layout="@layout/tittle"></include>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ganmao"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/bumei"
                android:textColor="@color/black"
                android:textSize="60dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/duomeng"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="多梦"
                android:textColor="@color/black"
                android:textSize="23dp" />


            <RadioGroup
                android:id="@+id/duomeng_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/duomeng_rg_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/dabiansezhi_rg_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />

            </RadioGroup>


            <TextView
                android:id="@+id/cheyebumian"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="彻夜不眠"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RadioGroup
                android:id="@+id/cheyebumian_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/cheyebumian_rg_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/cheyebumian_rg_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />

            </RadioGroup>


            <TextView
                android:id="@+id/yijingxing"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="易惊醒"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RadioGroup
                android:id="@+id/yijingxing_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/yijingxing_rg_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/yijingxing_rg_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />
            </RadioGroup>


            <TextView
                android:id="@+id/nayisleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="难以入眠但睡后到清晨"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RadioGroup
                android:id="@+id/nayisleep_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/nayisleep_rg_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/nayisleep_rg_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />
                
            </RadioGroup>


            <TextView
                android:id="@+id/hardtosleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡后半夜即醒，难以再次入眠"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RadioGroup
                android:id="@+id/hardtosleep_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/hardtosleep_rg_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/hardtosleep_rg_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />

            </RadioGroup>

            <TextView
                android:id="@+id/bansuizhuangkuang"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="伴随症状"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jizaoyinu"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="急躁易怒"
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/jizaoyinu_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/jizaoyinu_rg_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/jizaoyinu_rg_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否" />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xiongmen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胸闷"
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/xiongmen_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/xiongmen_rg_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/xiongmen_rg_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否" />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yinshi"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="饮食"
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/yinshi_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yinshi_rg_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无食欲" />

                    <RadioButton
                        android:id="@+id/yinshi_rg_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="食欲不振" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kougankouku"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="口干口苦"
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/kougankouku_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/kougankouku_rg_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/kougankouku_rg_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/touyunmuxuan"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="头晕目眩"
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/touyunmuxuan_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/touyunmuxuan_rg_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/touyunmuxuan_rg_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否" />

                </RadioGroup>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:layout_gravity="bottom"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>
